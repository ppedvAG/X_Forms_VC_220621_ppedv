<?xml version="1.0" encoding="utf-8" ?>
<!--Die TabbedPage-Navigation ist eine Navigation mittels Registerkarten. Diese werden je nach OS oben oder unten auf
    der Page angezeigt. Mittels wischen nach links/rechts kann ebenfalls zwischen den hier definierten ContentPages gewechselt werden-->
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="X_Forms.NavigationBsp.TabbedPageBsp"
            xmlns:layouts="clr-namespace:X_Forms.Layouts"
            Title="TabbedBsp">
   <ContentPage Title="Tab 1">
        <Label Text="Seite 1"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>
    </ContentPage>
    <layouts:StackLayoutBsp/>
    <layouts:GridLayoutBsp/>
    <layouts:AbsoluteLayoutBsp Title="Absolute"/>
    <layouts:RelativeLayoutBsp Title="Relative"/>
</TabbedPage>